{
    "manifest_version": 2,
    "name": "{{name}}",
    "version": "{{version}}",
    "description": "{{description}}",
    "author": "{{author}}",
    "icons": {
        "16": "icon16.png",
        "64": "icon64.png",
        "128": "icon128.png",
        "256": "icon256.png"
    },
    {{#if content_scripts}}
    "content_scripts": [{
        {{#if content_scripts.javascripts}}
        "js": [
          {{#each content_scripts.javascripts}}
              "{{this}}",
          {{/each}}
        ],
        {{/if}}
        {{#if content_scripts.stylesheets}}
        "css": [
          {{#each content_scripts.stylesheets}}
              "{{this}}",
          {{/each}}
        ],
        {{/if}}
        "matches": ["http://{{host}}/*", "https://{{host}}/*"]
    }],
    {{/if}}
    "web_accessible_resources": [
        "images/*.png",
        "images/*.svg"
    ]
}
